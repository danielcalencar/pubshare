<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
  <RelativeLayout 
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content" android:background="#fff">

      	<include layout="@layout/change_profile_photo_layout" 
      	    android:layout_above="@+id/headerprofileedit"/>
      	
      	<LinearLayout android:id="@+id/headerprofileedit"
		  				android:layout_width="fill_parent"
		  				android:layout_height="wrap_content"
		  				android:paddingTop="80dip"
		  				android:paddingBottom="5dip"
		  				android:orientation="vertical">
		  <TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:text="Basic Information"
				  		android:background="@layout/profile_background"
				  		android:layout_marginTop="60dip"
				  		android:textSize="15sp"/>	
		 	
		   <TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:layout_marginTop="10dip"
				  		android:text="  Institution"
				  		android:textSize="15sp"/>	
		    <EditText
		                android:id="@+id/einstitution"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:inputType="text"
		                android:maxLines="1"
		                android:singleLine="true"
		                android:layout_marginTop="5dip"
		  				android:layout_marginBottom="20dip" />
				
			<TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:text="  Degree"
				  		android:textSize="15sp" />	
			<EditText
		                android:id="@+id/edegree"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:inputType="text"
		                android:maxLines="1"
		                android:singleLine="true"
		                android:layout_marginTop="5dip"
		  				android:layout_marginBottom="20dip" />
				 
			 <TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:text="  City/Country"
				  		android:textSize="15sp" />	
			 <EditText
		                android:id="@+id/ecountry"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:inputType="text"
		                android:maxLines="1"
		                android:singleLine="true"
		                android:layout_marginTop="5dip"
		  				android:layout_marginBottom="20dip" />
				 
			 <TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:text="  Gender"
				  		android:textSize="15sp" />	
			 <EditText
		                android:id="@+id/egender"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:inputType="text"
		                android:maxLines="1"
		                android:singleLine="true"
		                android:layout_marginTop="5dip"
		  				android:layout_marginBottom="20dip" />
				 
			 <TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:text="Personal Information"
				  		android:background="@layout/profile_background"
				  		android:textSize="15sp" />	 
		    
      		 <TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:layout_marginTop="10dip"
				  		android:text="  Birthday"
				  		android:textSize="15sp" />	
			 <EditText
		                android:id="@+id/ebirthday"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:inputType="date"
		                android:maxLines="1"
		                android:singleLine="true"
		                android:layout_marginTop="5dip"
		  				android:layout_marginBottom="20dip" />
				 			
			 <TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:text="  About Me"
				  		android:textSize="15sp" />	
			 <EditText
		                android:id="@+id/eaboutme"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:inputType="textMultiLine" 
		                android:singleLine="true"
		                android:layout_marginTop="5dip"
		  				android:layout_marginBottom="20dip" />
				 
			 <TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:text="Contact Information"
				  		android:background="@layout/profile_background"
				  		android:textSize="15sp" />		
		 	      
			 <TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:layout_marginTop="10dip"
				  		android:text="  Facebook"
				  		android:textSize="15sp" />	
			 <EditText
		                android:id="@+id/efacebook"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:inputType="text"
		                android:maxLines="1"
		                android:singleLine="true"
		                android:layout_marginTop="5dip"
		  				android:layout_marginBottom="20dip" />
					 
			 <TextView android:layout_width="fill_parent"
				  		android:layout_height="wrap_content"
				  		android:textColor="#372c24"
				  		android:text="  Phone"
				  		android:textSize="15sp" />	
				 	
			 <EditText android:id="@+id/ephone"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:inputType="phone"
		                android:maxLines="1"
		                android:singleLine="true"
		                android:layout_marginTop="5dip"
		  				android:layout_marginBottom="20dip" />
				 		
			 <Button android:id="@+id/btnEditDone" 
		  				android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="center"
		                android:paddingLeft="32dp"
		                android:paddingRight="32dp"
		  				android:text="Done!"/>
		 	
      </LinearLayout>
  </RelativeLayout>
</ScrollView>