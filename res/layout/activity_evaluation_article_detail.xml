<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/label_originality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Originality"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RatingBar
            android:id="@+id/rating_originality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_contribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contribution"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RatingBar
            android:id="@+id/rating_contribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_relevance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relevance"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RatingBar
            android:id="@+id/rating_relevance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_readability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Readability"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RatingBar
            android:id="@+id/rating_readability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_relatedworks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Related Works"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RatingBar
            android:id="@+id/rating_relatedworks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_familiarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Familiarity"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RatingBar
            android:id="@+id/rating_familiarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_review_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Notes:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_review_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes from reviewers here" />

        <TextView
            android:id="@+id/label_final_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Grade:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_final_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="final grade here" />
    </LinearLayout>

</ScrollView>